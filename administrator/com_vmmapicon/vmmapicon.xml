<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
	<name>com_vmmapicon</name>
	<author>Mario Hewera</author>
	<creationDate>Mai 2025</creationDate>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>mh@villaester.de</authorEmail>
	<authorUrl>https://villaester.de</authorUrl>
	<version>1.0.0</version>
	<description>COM_VMMAPICON_XML_DESCRIPTION</description>
    <namespace path="src">Villaester\Component\Vmmapicon</namespace>


	<install> <!-- Runs on install -->
		<sql>
			<file charset="utf8" driver="mysql">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file charset="utf8" driver="mysql">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<update> <!-- Runs on update -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<media destination="com_vmmapicon" folder="media">
		<filename>index.html</filename>
        <filename>joomla.asset.json</filename>
		<folder>css</folder>
        <folder>images</folder>
		<folder>js</folder>
		<folder>scss</folder>
	</media>

	<files folder="site">
		<folder>forms</folder>
        <folder>helpers</folder>
		<folder>layouts</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>

	<languages folder="site/language">
		<language tag="de-DE">de-DE/com_vmmapicon.ini</language>
		<language tag="en-GB">en-GB/com_vmmapicon.ini</language>
	</languages>

	<administration>
		<menu img="class:comment">
			COM_VMMAPICON
		</menu>
		<submenu>
			<menu link="option=com_config&amp;view=component&amp;component=com_vmmapicon">
				COM_VMMAPICON_SETTINGS
			</menu>
		</submenu>

		<files folder="administrator">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>vmmapicon.xml</filename>
			<folder>sql</folder>
            <folder>forms</folder>
            <folder>services</folder>
			<folder>src</folder>
			<folder>tmpl</folder>
		</files>

		<languages folder="administrator/language">
			<language tag="de-DE">de-DE/com_vmmapicon.ini</language>
			<language tag="de-DE">de-DE/com_vmmapicon.sys.ini</language>
			<language tag="en-GB">en-GB/com_vmmapicon.ini</language>
			<language tag="en-GB">en-GB/com_vmmapicon.sys.ini</language>
		</languages>
	</administration>


</extension>
