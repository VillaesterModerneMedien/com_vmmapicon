<?xml version="1.0" encoding="UTF-8"?>
<metadata>
	<layout title="COM_VMMAPICON_API_VIEW_DEFAULT_TITLE" option="COM_VMMAPICON_API_VIEW_DEFAULT_OPTION">
		<help
			key = "Menu_Item:_Single_Api"
		/>
		<message>
			<![CDATA[COM_VMMAPICON_API_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>

    <!-- Add fields to the request variables for the layout (Joomla standard: item ID in request) -->
    <fields name="request">
        <fieldset name="request"
                  addfieldprefix="Villaester\Component\Vmmapicon\Administrator\Field">
            <field
                name="id"
                type="Apis"
                label="COM_VMMAPICON_FIELD_API_LABEL"
                description="COM_VMMAPICON_FIELD_API_DESC"
                required="true"
            />
        </fieldset>
    </fields>

    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">

		<!-- Basic options. -->
		<fieldset name="basic"
			label="COM_VMMAPICON_ATTRIBS_API_SETTINGS_LABEL"
		>

            <field
                name="show_title"
                type="list"
                label="JGLOBAL_SHOW_TITLE_LABEL"
                useglobal="true"
				class="form-select-color-state"
				validate="options"
				>
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
			</field>

			<field
				name="link_titles"
				type="list"
				label="JGLOBAL_LINKED_TITLES_LABEL"
				useglobal="true"
				class="form-select-color-state"
				validate="options"
				>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field
				name="show_intro"
				type="list"
				label="JGLOBAL_SHOW_INTRO_LABEL"
				useglobal="true"
				class="form-select-color-state"
				validate="options"
				>
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
			</field>

			<field
				name="show_create_date"
				type="list"
				label="JGLOBAL_SHOW_CREATE_DATE_LABEL"
				useglobal="true"
				class="form-select-color-state"
				validate="options"
				>
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
			</field>

			<field
				name="show_modify_date"
				type="list"
				label="JGLOBAL_SHOW_MODIFY_DATE_LABEL"
				useglobal="true"
				class="form-select-color-state"
				validate="options"
				>
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
			</field>

		</fieldset>
	</fields>
</metadata>
